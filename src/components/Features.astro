const features = [
	{
		icon: 'i-lucide-monitor',
		title: 'Notch UI',
		description:
			'Beautiful Dynamic Island-style overlay that lives in your menu bar. Always visible, never in the way.'
	},
	{
		icon: 'i-lucide-activity',
		title: 'Live Sessions',
		description:
			'Real-time monitoring of all your Claude Code CLI sessions. See what Claude is working on at a glance.'
	},
	{
		icon: 'i-lucide-shield-check',
		title: 'Quick Approvals',
		description:
			'Approve or deny tool requests directly from the overlay. No need to switch back to your terminal.'
	},
	{
		icon: 'i-lucide-message-square',
		title: 'Chat History',
		description:
			'Browse through your conversation history with Claude. Copy messages and review past interactions.'
	}
];
---

<section id="features" class="section relative">
	<!-- Background accent -->
	<div
		class="absolute inset-0 bg-gradient-to-b from-transparent via-coral/3 to-transparent pointer-events-none"
	>
	</div>

	<div class="container relative">
		<!-- Section header -->
		<div class="text-center mb-12 md:mb-16">
			<span class="badge mb-4 reveal">Features</span>
			<h2 class="heading-2 mb-4 reveal stagger-2">
				Everything you need,
				<span class="gradient-coral">nothing you don't</span>
			</h2>
			<p class="body-large max-w-2xl mx-auto reveal stagger-3">
				Claude Island is designed to enhance your Claude Code workflow without getting in the way.
			</p>
		</div>

		<!-- Features grid -->
		<div class="grid sm:grid-cols-2 gap-4 md:gap-6">
			{
				features.map((feature, index) => (
					<div class={`card-hover group reveal stagger-${index + 1}`}>
						{/* Icon */}
						<div class="w-12 h-12 rounded-xl bg-coral/10 flex-center mb-4 group-hover:bg-coral/20 transition-colors">
							<span class={`${feature.icon} w-6 h-6 text-coral`} />
						</div>

						{/* Content */}
						<h3 class="heading-3 mb-2 text-white">{feature.title}</h3>
						<p class="body-base">{feature.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
