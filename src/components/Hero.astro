import { DOWNLOAD_URL, LATEST_VERSION } from '../config';
import DownloadButton from './DownloadButton.svelte';
---

<section class="relative pt-32 pb-16 md:pt-40 md:pb-24 lg:pb-32 overflow-hidden">
	<!-- Background gradient -->
	<div
		class="absolute inset-0 bg-gradient-to-b from-coral/5 via-transparent to-transparent pointer-events-none"
	>
	</div>

	<!-- Decorative elements -->
	<div
		class="absolute top-20 left-10 w-64 h-64 bg-coral/10 rounded-full blur-3xl opacity-50 animate-float"
	>
	</div>
	<div
		class="absolute bottom-20 right-10 w-96 h-96 bg-ocean/10 rounded-full blur-3xl opacity-30"
		style="animation: float 6s ease-in-out infinite reverse;"
	>
	</div>

	<div class="container relative">
		<div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
			<!-- Left: Content -->
			<div class="text-center lg:text-left">
				<!-- Eyebrow badge -->
				<div class="inline-flex items-center gap-2 mb-6 animate-fade-up">
					<span class="badge">
						<span class="i-lucide-apple w-3 h-3 mr-1"></span>
						macOS 15.6+
					</span>
				</div>

				<!-- Main heading -->
				<h1 class="heading-1 mb-6 animate-fade-up stagger-2">
					<span class="gradient-coral">Dynamic Island</span>
					<br />
					for Claude Code
				</h1>

				<!-- Subtext -->
				<p class="body-large max-w-xl mx-auto lg:mx-0 mb-8 animate-fade-up stagger-3">
					Monitor your Claude Code CLI sessions with a beautiful notch-style overlay. Approve tools,
					view chat history, and stay in control—all from your menu bar.
				</p>

				<!-- CTAs -->
				<div
					class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 animate-fade-up stagger-4"
				>
					<DownloadButton version={LATEST_VERSION} downloadUrl={DOWNLOAD_URL} client:visible />

					<a
						href="https://github.com/engels74/claude-island"
						target="_blank"
						rel="noopener noreferrer"
						class="btn-ghost flex items-center gap-2"
					>
						<span class="i-lucide-github w-5 h-5"></span>
						View on GitHub
					</a>
				</div>
			</div>

			<!-- Right: Notch mockup -->
			<div class="relative flex justify-center lg:justify-end animate-fade-up stagger-3">
				<div class="relative">
					<!-- Glow effect -->
					<div
						class="absolute inset-0 bg-gradient-to-br from-coral/20 to-ocean/20 rounded-[40px] blur-2xl scale-110"
					>
					</div>

					<!-- MacBook notch mockup -->
					<div class="relative bg-surface rounded-[32px] p-6 border border-white/10">
						<!-- Notch bar -->
						<div class="relative bg-notch-black rounded-t-[24px] p-4 mb-4">
							<!-- Notch shape -->
							<div
								class="absolute top-0 left-1/2 -translate-x-1/2 w-32 h-7 bg-black rounded-b-2xl"
							>
							</div>

							<!-- Session indicator -->
							<div class="flex items-center justify-between pt-4">
								<div class="flex items-center gap-2">
									<div class="w-2 h-2 bg-palm rounded-full animate-pulse"></div>
									<span class="font-mono text-xs text-white/60">Session active</span>
								</div>
								<span class="font-pixel text-xs text-coral">v{LATEST_VERSION}</span>
							</div>
						</div>

						<!-- Mock session content -->
						<div class="space-y-3">
							<!-- Session card -->
							<div class="bg-notch-black rounded-xl p-4 border border-white/5">
								<div class="flex items-start gap-3">
									<div class="w-8 h-8 rounded-lg bg-coral/20 flex-center shrink-0">
										<span class="i-lucide-terminal w-4 h-4 text-coral"></span>
									</div>
									<div class="flex-1 min-w-0">
										<div class="flex items-center justify-between mb-1">
											<span class="font-medium text-sm truncate">claude-island-web</span>
											<span class="text-xs text-white/40">2m ago</span>
										</div>
										<p class="text-xs text-white/50 truncate">Implementing landing page...</p>
									</div>
								</div>
							</div>

							<!-- Tool approval request -->
							<div
								class="bg-gradient-to-r from-coral/10 to-transparent rounded-xl p-4 border border-coral/20"
							>
								<div class="flex items-center gap-3 mb-3">
									<span class="i-lucide-shield-check w-4 h-4 text-coral"></span>
									<span class="text-sm font-medium">Tool Request</span>
								</div>
								<div class="flex items-center gap-2 mb-3">
									<code class="text-xs bg-black/30 px-2 py-1 rounded font-mono">Write</code>
									<span class="text-xs text-white/50">→ src/components/Hero.astro</span>
								</div>
								<div class="flex gap-2">
									<button
										type="button"
										class="flex-1 py-1.5 text-xs font-medium bg-palm/20 text-palm rounded-lg hover:bg-palm/30 transition-colors"
									>
										Approve
									</button>
									<button
										type="button"
										class="flex-1 py-1.5 text-xs font-medium bg-white/5 text-white/60 rounded-lg hover:bg-white/10 transition-colors"
									>
										Deny
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
